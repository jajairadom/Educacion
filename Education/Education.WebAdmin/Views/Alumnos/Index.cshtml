@model IEnumerable<Education.BL.Alumno>

@{
    ViewBag.Title = "Alumnos";
}

<h2>Alumnos</h2>

<p>
    @Html.ActionLink("Nuevo Alumno", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreAlumno)
        </th>
       <th>
           @Html.DisplayNameFor(model => model.Categoria)
       </th>
        <th>
            @Html.DisplayNameFor(model => model.RTN)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreAlumno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RTN)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalle", "Detalle", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.Id })
        </td>
    </tr>
}

</table>
